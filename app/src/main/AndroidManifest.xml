<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mara.dvlavehicleinformation">

    <!-- INTERNET permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DVLAVehicleInformation"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add the ResultsActivityMOT declaration -->
        <activity android:name=".ResultsActivityMOT" />

        <!-- Add the ResultsActivity declaration -->
        <activity android:name=".ResultsActivity" />

        <!-- Add the AskMidActivity declaration -->
        <activity
            android:name=".AskMidActivity"
            android:label="AskMID" />

    </application>

</manifest>
